<div class= "text-center py-1">
  <span class="secondary-title fs-3">Review this cocktail</span>
</div>
<%= simple_form_for [cocktail, review], html: { class: "row g-3" } do |f| %>
  <div class="col-12">
    <%= f.input :content, label: false, input_html: { placeholder: "Add your review here...", class: "form-control-sm w-100" } %>
  </div>
  <div class="col-md-6">
    <%= f.input :rating, collection: [1, 1.5, 2, 2.5, 3, 3.5, 4, 4.5, 5], include_blank: "Choose a rating...", include_hidden: false, label: false, input_html: { class: "form-control" } %>
  </div>
  <div class="col-md-6">
    <%= f.input :user, label: false, input_html: { placeholder: "Your name", class: "form-control" } %>
  </div>
  <%= f.submit "review", class: "btn btn-sm btn-success"%>
<% end %>
