<%= simple_form_for cocktail, html: { class: "row g-3" } do |f| %>
  <div class="col-md-5">
    <%= f.input :photo, label: false, input_html: { placeholder: "Name", class: "form-control" } %>
  </div>
  <div class="col-md-5">
    <%= f.input :name, label: false, input_html: { class: "form-control" } %>
  </div>
  <div class="col-md-2 d-grid gap-2">
    <%= f.submit "update drink", class: "btn btn-success" %>
  </div>
<% end %>
