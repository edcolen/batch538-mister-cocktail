<div class="container mt-4">
  <div class="row d-flex justify-content-center">
    <% @cocktails.each do |cocktail| %>
      <div class="col-5 my-3">
        <%= link_to cocktail_path(cocktail) do %>
          <div class="card-category py-3" style="background-image: linear-gradient(to bottom, rgba(0,0,0,0.1), rgba(0,0,0,0.9)), url('<%= cl_image_path cocktail.photo.key, transformation: [{crop: "crop", width: 900, height:1400},{width: 200, height: 400, gravity: 'auto', crop: "fill", quality: 100}] %>')">
            <%= cocktail.name %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
