<div class="container mt-4">
  <div class="row d-flex justify-content-center">
    <% @cocktails.each do |cocktail| %>
      <div class="col-5 my-3">
        <%= link_to cocktail_path(cocktail) do %>

          <!-- Condicional para evitar que a página quebre quando o objeto não tiver uma imagem -->
          <% if cocktail.photo.present? %>
            <div class="card-category py-3" style="background-image: linear-gradient(to bottom, rgba(0,0,0,0.1), rgba(0,0,0,0.9)), url('<%= cl_image_path cocktail.photo.key, transformation: [{crop: "crop", width: 900, height:1400},{width: 200, height: 400, gravity: 'auto', crop: "fill", quality: 100}] %>')">
            <% else %>
              <div class="card-category py-3" style="background-image: linear-gradient(to bottom, rgba(0,0,0,0.1), rgba(0,0,0,0.9)), url('https://images.unsplash.com/photo-1536935338788-846bb9981813?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1886&q=80')">
              <% end %>
              <%= cocktail.name %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
