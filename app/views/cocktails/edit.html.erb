<%= link_to "back", cocktail_path(@cocktail) %>
<h1>Edit <%= @cocktail.name %></h1>

<%= render "form", cocktail: @cocktail %>

<hr>
<%= render "doses/new", cocktail: @cocktail, dose: @dose %>
<hr>

<% @cocktail.doses.each do |dose| %>
  <p>
    <%= "#{dose.description} of #{dose.ingredient.name}" %>
    <%= link_to dose_path(dose), method: :delete do %>
      <i class="fas fa-minus-circle"></i>
    <% end %>
  </p>
<% end %>

